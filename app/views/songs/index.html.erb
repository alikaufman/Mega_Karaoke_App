<% if @songs.size > 0 %>
<table class="index-table">
  <tr class="index-table-heading">
    <th class="sortable"><%= sortable "artist" %> <i class="fa fa-sort"></i></th>
    <th class="sortable"><%= sortable "title" %> <i class="fa fa-sort"></i></th>
    <th class="sortable"><%= sortable "genre" %> <i class="fa fa-sort"></i></th>
    <th class="sortable"><%= sortable "rating" %> <i class="fa fa-sort"></i></th>
  </tr>
  
    <% for song in @songs %>
      <% if song.user_id == current_user.id %>
        <tr>
          <td class="artist"><%= song.artist %></td>
          <td class="song-link"><%= link_to song.title, song %></td>
          <td class="genre"><%= song.genre %></td>
          <td class="rating">
            <% if song.rating == nil %>
              unrated
            <% else %>
              <% song.rating.times do %>
                <i class="fa fa-star"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
</table>

  <% else %>
    <div class="get-started">
      <h2 class="text-center">You don't have any songs in your database!</h2>
      <h3 class="text-center">Click <%= link_to 'here', new_song_path %> to get started</h3>
    </div>
  <% end %>


