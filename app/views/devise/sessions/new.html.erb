<div class="index-container">
<div class="loginform">
<h2 class="signin">Sign in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div><%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: "col-xs-8 col-xs-offset-2 input-lg" %></div>
</div>
<div class="row">
  <div><%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "col-xs-8 col-xs-offset-2 input-lg" %></div>
</div>
<div class='subform'>
  <% if devise_mapping.rememberable? -%>
    <div class="rememberme"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: 'btn' %></div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>